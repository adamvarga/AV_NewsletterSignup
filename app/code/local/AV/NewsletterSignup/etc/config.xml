<?xml version="1.0"?>
<config>
    <modules>
        <AV_NewsletterSignup>
            <version>0.1.0</version>
        </AV_NewsletterSignup>
    </modules>
    <global>
        <models>
            <av_newslettersignup>
                <class>AV_NewsletterSignup_Model</class>
            </av_newslettersignup>
            <newsletter_resource>
                <rewrite>
                    <subscriber_collection>AV_NewsletterSignup_Model_Mysql4_Subscriber_Collection</subscriber_collection>
                </rewrite>
            </newsletter_resource>
        </models>
        <blocks>
            <av_newslettersignup>
                <class>AV_NewsletterSignup_Block</class>
            </av_newslettersignup>
            <adminhtml>
                <rewrite> 
                    <newsletter_subscriber_grid>AV_NewsletterSignup_Adminhtml_Block_Newsletter_Subscriber_Grid</newsletter_subscriber_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <av_newslettersignup>
                <class>AV_NewsletterSignup_Helper</class>
            </av_newslettersignup>
        </helpers>
        <events>
            <newsletter_subscriber_save_before>
                <observers>
                    <newsletterSubscriberChange>
                        <class>AV_NewsletterSignup_Model_Observer</class>
                        <method>newsletterSubscriberChange</method>
                    </newsletterSubscriberChange>
                </observers>
            </newsletter_subscriber_save_before>
        </events>
        <resources>
            <newslettersign_setup>
                <setup>
                    <module>AV_NewsletterSignup</module>
                    <class>AV_NewsletterSignup_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </newslettersign_setup>
            <av_newslettersignup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </av_newslettersignup_write>
            <av_newslettersignup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </av_newslettersignup_read>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <av_newslettersignup>
                    <file>newslettersign.xml</file>
                </av_newslettersignup>
            </updates>
        </layout>
    </frontend>
</config>
